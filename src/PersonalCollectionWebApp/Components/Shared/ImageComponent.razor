@inject ImageStorageService ImageStorageService

<MudImage ObjectFit=ObjectFit.ScaleDown Src=@imageSource Height="200" Width="400" Elevation="25" Class="rounded-lg ma-4" />

@code {
    [Parameter] public string? FileName { get; set; }

    private string? imageSource;

    protected override async Task OnInitializedAsync()
    {
        if (!string.IsNullOrEmpty(FileName))
        {
            await GetImage(FileName);
        }   
    }

    private async Task GetImage(string fileName)
    {
        imageSource = await ImageStorageService.DownloadAsync(fileName);
    }
}
