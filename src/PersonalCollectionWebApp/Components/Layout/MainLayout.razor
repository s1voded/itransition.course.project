@inherits LayoutComponentBase

<MudThemeProvider @bind-IsDarkMode="@_isDarkMode" />
<MudPopoverProvider/>
<MudDialogProvider/>
<MudSnackbarProvider/>

<MudLayout>
    <MudDrawer Open="true" Variant="DrawerVariant.Persistent">
        <MyNavMenu />
    </MudDrawer>
    <MudAppBar Dense=true Color="Color.Transparent" Fixed=false Elevation="1">
        <CultureSelector />
        <MudToggleIconButton @bind-Toggled="@_isDarkMode"
                             Icon="@Icons.Material.Filled.DarkMode" Color="@Color.Dark"
                             ToggledIcon="@Icons.Material.Filled.LightMode" ToggledColor="@Color.Warning"/>
        <MudSpacer />
        <SearchAppBar />
    </MudAppBar>
    <MudMainContent Class="pt-6">
        <MudContainer MaxWidth="MaxWidth.ExtraLarge">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    private static bool _isDarkMode;
}